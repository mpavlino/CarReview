@model Review.Models.Brand.BrandViewModel
<form>
    <div class="form-group row mb-3">
        <label class="col-lg-3 col-md-5 col-form-label">Name</label>
        <div class="col-lg-8 col-md-7">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label class="col-lg-3 col-md-5 col-form-label">Country</label>
        <div class="col-lg-8 col-md-7">
            <select asp-for="CountryID" asp-items="ViewBag.PossibleCountries" class="form-control select2-input"></select>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-lg-8 offset-lg-3 col-md-7 offset-md-5">
            <input type="submit" value="Save" class="btn btn-outline-primary" />
            <button type="reset" class="btn btn-outline-secondary">Reset</button>
        </div>
    </div>
</form>
