@model Review.Model.Reviewer
<div class="form-group mb-2">
    <label class="control-label">First Name</label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group mb-2">
    <label class="control-label">Last Name</label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group mb-2">
    <label class="control-label">Date of birth</label>
    <div class="input-group date" data-provide="datepicker"
         data-date-format="@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()">
        <input asp-for="DateOfBirth" type="text" class="form-control">
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>
<div class="form-group mb-2">
    <label asp-for="Gender" class="control-label"></label>
    <div>
        <label><input class="form-check-input" type="radio" asp-for="Gender" value="M" /> Male</label>
        <label><input class="form-check-input" type="radio" asp-for="Gender" value="F" /> Female</label>
    </div>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">About</label>
    <textarea asp-for="About" class="form-control" rows="5" cols="40"></textarea>
    <span asp-validation-for="About" class="text-danger"></span>
</div>

<div class="form-group mt-3">
    <input type="submit" value="Save" class="btn btn-outline-primary" />
    <button type="reset" class="btn btn-outline-secondary">Reset</button>
</div>