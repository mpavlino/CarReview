@model Review.Model.Reviewer
@{
    ViewData["Title"] = "Details";
    string date = Model.DateOfBirth.ToShortDateString();
}
<ol class="breadcrumb">
    <li><a asp-action="Index">Reviewers list /</a></li>
    <li class="active">&nbsp;Reviewer / @Model.FullName</li>
</ol>
<div class="pagetitle">
    <h1>Details</h1>
</div>
@if (Model != null)
{

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                First Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt>
                Last Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt>
                Date of birth
            </dt>
            <dd>
                @Html.DisplayName(date)
            </dd>
            <dt>
                Gender
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt>
                About
            </dt>
            <dd>
                @Html.DisplayFor(model => model.About)
            </dd>
        </dl>
    </div>

}
else
{
    <div class="alert alert-danger">
        Nije odabran ispravni ID reviewera.
    </div>

}
