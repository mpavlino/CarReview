@using Review.Models
@model CarFilterModel

<form asp-action="IndexAjax" method="post" class="form-inline">
    <div class="row mb-2">
        <div class="form-group col-4">
            <select asp-for="Brand" asp-items="ViewBag.PossibleBrands" class="form-control select2-input"></select>
        </div>
        <div class="form-group col-4">
            <input asp-for="Model" class="form-control" type="text" placeholder="Model" />
        </div>
        <div class="form-group col-4">
            <input asp-for="Engine" class="form-control" type="text" placeholder="Engine" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-4">
            <select asp-for="Country" asp-items="ViewBag.PossibleCountries" class="form-control select2-input"></select>
        </div>
        <div class="form-group col-4">
            <input asp-for="Reviewer" class="form-control" type="text" placeholder="Reviewer" />
        </div>
        <div class="form-group col-4">
            <button type="button" class="btn btn-outline-primary btn-sm mt-1" onclick="performSearch(this)"><i class="bi-search"></i> Search</button>
        </div>
    </div>
</form>