@model List<Review.Model.Car>
@{
    ViewData["Title"] = "Home Page";
}
<h2 class="display-4">Cars list</h2>
<div style="margin-top: 20px;">
    <partial name="_CarFilter" model="new CarFilterModel()" />
</div>
<div>
        <div class="col-md-12" style="margin-top: 30px; margin-bottom: 30px; width: 200px;">
            <a asp-action="Create" class="btn btn-primary" style="display: inline-block; width: 100%;"><b>ADD A NEW CAR</b></a>
        </div>
        <div class="col-md-12" style="margin-top: 30px; margin-bottom: 30px; width: 200px;">
            <a asp-action="CreateReviewer" class="btn btn-primary" style="display: inline-block; width: 100%;"><b>ADD A REVIEWER</b></a>
        </div>
        <div class="col-md-12" style="margin-top: 30px; margin-bottom: 30px; width: 200px;">
            <a asp-action="GetReviewers" class="btn btn-primary" style="display: inline-block; width: 100%;"><b>REVIEWERS LIST</b></a>
        </div>
</div>
<partial name="_IndexTable" />
@section Scripts{
    <script type="text/javascript">
        function performSearch(sender){
            var formValues = $(sender).closest('form').serialize();

            $.ajax({
                url: '@Url.Action("IndexAjax", "Car")',
                data: formValues,
                method: "POST",
                success: function (html) {
                    $("#tbl-cars").replaceWith(html);
                }

            })
        }
    </script>
}