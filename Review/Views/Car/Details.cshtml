@model Review.Model.Car
@{
    ViewData["Title"] = "Details";
}
<ol class="breadcrumb">
    <li><a asp-action="Index">Cars list /</a></li>
    <li class="active">&nbsp;@Model.Brand?.Name</li>
</ol>
<div class="pagetitle mb-4">
    <h1>Car details</h1>
</div>
@if( Model != null ) {
    <div class="row mb-4">
        <div class="col-md-5">
            <dl class="row">
                <dt class="col-sm-5">Brand</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.Brand.Name )</dd>
                <dt class="col-sm-5">Model</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.Model )</dd>
                <dt class="col-sm-5">Generation</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.Generation )</dd>
                <dt class="col-sm-5">Model Year</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.ModelYear.Year ).</dd>
                <dt class="col-sm-5">Engine</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.Engine )</dd>
                <dt class="col-sm-5">Power</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.EnginePower ) hp</dd>
                <dt class="col-sm-5">Torque</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.Torque ) Nm</dd>
                <dt class="col-sm-5">Engine Displacement</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.EngineDisplacement ) cm<sup>3</sup></dd>
                <dt class="col-sm-5">Max. Speed</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.TopSpeed ) km/h</dd>
                <dt class="col-sm-5">Acceleration (0-100km/h)</dt>
                <dd class="col-sm-7">@Html.DisplayFor( model => model.Acceleration ) sec</dd>
            </dl>
        </div>
        <div class="col-md-4">
            <dl class="row">
                <dt class="col-sm-4">Country</dt>
                <dd class="col-sm-8">@Model?.Brand.Country?.Name</dd>
                <dt class="col-sm-4">Reviewer</dt>
                <dd class="col-sm-8">@Model?.Reviewer?.FullName</dd>
                <dt class="col-sm-4">Rating</dt>
                <dd class="col-sm-8">@Model.Rating ★</dd>
            </dl>
        </div>
        <div class="col-md-3">
            <div class="col-sm-12 text-center">
                @if( Model.ImageData != null ) {
                    <img src="data:@Model.ImageMimeType;base64,@Convert.ToBase64String(Model.ImageData)" class="car-img img-fluid" alt="Car Image" />
                }
            </div>
        </div>
    </div>
    <div class="row">
        <dl class="col-12">
            <dt>Review (About)</dt>
            <dd>@Html.DisplayFor( model => model.Description )</dd>
        </dl>
    </div>

    <a asp-action="GenerateImage">Generate image</a>

}
else {
    <div class="alert alert-danger">
        Nije odabran ispravni ID automobila.
    </div>

}
