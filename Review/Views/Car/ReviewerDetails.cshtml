@model Review.Model.Reviewer
@{
    ViewData["Title"] = "Details";
}
<h2>Details</h2>
@if (Model != null)
{
    <ol class="breadcrumb">
        <li><a asp-action="Index">Cars list</a></li>
        <li class="active">Reviewer / @Model.FullName</li>
    </ol>

    <div>
        <h4>Reviewer</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                ID
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ID)
            </dd>
            <dt>
                First Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt>
                Last Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt>
                Date of birth
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateOfBirth.Date)
            </dd>
            <dt>
                Gender
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt>
                About
            </dt>
            <dd>
                @Html.DisplayFor(model => model.About)
            </dd>
        </dl>
    </div>

}
else
{
    <div class="alert alert-danger">
        Nije odabran ispravni ID reviewera.
    </div>

}
